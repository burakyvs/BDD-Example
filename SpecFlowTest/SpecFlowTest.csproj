  </ItemGroup>

  <ItemGroup>
    <Compile Update="Features\ECommerce.feature.cs">
      <DependentUpon>ECommerce.feature</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <SpecFlowFeatureFiles Update="Features\ECommerce.feature">
